<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- EditText -->
        <item name="colorControlActivated">@color/accent_color_red</item>
        <!-- <item name="colorControlHighlight">@color/red</item> -->
        <item name="colorAccent">@color/accent_color_red</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/action_bar_gray</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/status_bar_gray</item>

        <item name="android:alertDialogTheme">@style/DialogStyleCustom</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/blue</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/blue</item>
    </style>

    <style name="DialogStyleCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/action_bar_gray</item>
        <item name="colorPrimaryDark">@color/status_bar_gray</item>
        <item name="colorAccent">@color/accent_color_red</item>
    </style>

</resources>
