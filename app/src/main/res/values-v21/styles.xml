<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <!-- <item name="android:windowTranslucentStatus">true</item> -->

        <!-- EditText -->
        <item name="colorControlActivated">@color/accent_color_red</item>
        <!-- <item name="colorControlHighlight">@color/red</item> -->
        <item name="colorAccent">@color/accent_color_red</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/action_bar_gray</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/status_bar_gray</item>

        <item name="android:alertDialogTheme">@style/DialogStyleCustom</item>

        <!-- Action Mode position -->
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="actionModeBackground">@color/action_bar_gray</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="DialogStyleCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/action_bar_gray</item>
        <item name="colorPrimaryDark">@color/status_bar_gray</item>
        <item name="colorAccent">@color/accent_color_red</item>
    </style>

</resources>
